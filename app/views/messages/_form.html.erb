
<%= form_for @message, html: { multipart: true } do |f|%>
<p> Choose image: <br>
  <%= f.file_field :image %></p>
<%= f.hidden_field :user_1_id, :value => current_user.id %>
<p><% if params[:user_2_id].present? %>
      <%= f.hidden_field :user_2_id, :value => params[:user_2_id] %>
  <%else%>
      Choose recipient:
      <br>
      <p><%= f.collection_select :user_2_id, User.order(:username), :id, :username, include_blank: true %>
  <%end%></p>
<p>Content: <br><%=  f.text_area :content %></p>
<p><%=  f.submit 'Save' %></p>
<% end %>